@{
    ViewData["Title"] = "New Course";
    ViewData["menuActive2"] = "active";
    ViewData["moduleJSPage"] = "CoursesController.js";
}

<div class="pcoded-inner-content" id="CoursesController" ng-controller="CoursesCreate">
    <div class="main-body">
        <div class="page-wrapper">
            <!-- [ Main Content ] start -->
            <div class="pcoded-inner-content">
                <!-- [ breadcrumb ] start -->
                <div class="page-header">
                    <div class="page-block">
                        <div class="row align-items-center">
                            <div class="col-md-10">
                                <div class="page-header-title">
                                    <h5 class="m-b-10">Courses</h5>
                                </div>
                                <ul class="breadcrumb">
                                    <li class="breadcrumb-item">
                                        <a asp-controller="Home" asp-action="Index"><i class="feather icon-home"></i></a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a asp-controller="Courses" asp-action="Index">Courses</a>
                                    </li>
                                    <li class="breadcrumb-item">
                                        <a>New</a>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-2 text-right">
                                <button id="btnSaveCourse" type="button" class="btn btn-outline-success" data-toggle="tooltip">
                                    <i class="feather icon-save"></i>Save
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- [ breadcrumb ] end -->
                <div class="main-body">
                    <div class="page-wrapper">
                        <!-- [ Form ] start -->
                        <div class="col-xl-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Register New Course</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <form>
                                                <div class="form-group">
                                                    <label for="nameCourse">Course Name</label>
                                                    <input id="nameCourse" type="text"
                                                           class="form-control" placeholder="Name">
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- [ Form ] end -->
                    </div>
                </div>
            </div>
            <!-- [ Main Content ] end -->
        </div>
    </div>
</div>