@{
    ViewData["Title"] = "Dashboard";
    ViewData["menuActive1"] = "active";
    ViewData["moduleJSPage"] = "HomeController.js";
}

<div class="pcoded-inner-content" ng-controller="HomeController">
    <div class="main-body">
        <div class="page-wrapper">
            <!-- [ Main Content ] start -->
            <div class="row">
                <!--[ Amounts section ] start-->
                <div class="col-md-6 col-xl-3">
                    <div class="card">
                        <div class="card-block border-bottom">
                            <div class="row d-flex align-items-center">
                                <div class="col-auto">
                                    <i class="feather icon-folder f-30 text-c-green"></i>
                                </div>
                                <div class="col">
                                    <h3 class="f-w-300">{{amount.courses}}</h3>
                                    <span class="d-block text-uppercase">COURSES</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-xl-3">
                    <div class="card">
                        <div class="card-block border-bottom">
                            <div class="row d-flex align-items-center">
                                <div class="col-auto">
                                    <i class="feather icon-file-text f-30 text-c-green"></i>
                                </div>
                                <div class="col">
                                    <h3 class="f-w-300">{{amount.subjects}}</h3>
                                    <span class="d-block text-uppercase">SUBJECTS</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-xl-3">
                    <div class="card">
                        <div class="card-block border-bottom">
                            <div class="row d-flex align-items-center">
                                <div class="col-auto">
                                    <i class="feather icon-user f-30 text-c-green"></i>
                                </div>
                                <div class="col">
                                    <h3 class="f-w-300">{{amount.teachers}}</h3>
                                    <span class="d-block text-uppercase">TEACHERS</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-xl-3">
                    <div class="card">
                        <div class="card-block border-bottom">
                            <div class="row d-flex align-items-center">
                                <div class="col-auto">
                                    <i class="feather icon-users f-30 text-c-green"></i>
                                </div>
                                <div class="col">
                                    <h3 class="f-w-300">{{amount.students}}</h3>
                                    <span class="d-block text-uppercase">STUDENTS</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--[ Amounts section ] end -->
                <!--[ Recent Users ] start-->
                <div class="col-xl-8 col-md-6">
                    <div class="card Recent-Users">
                        <div class="card-header">
                            <h5>Recent Students</h5>
                        </div>
                        <div class="card-block px-0 py-3">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <tbody ng-bind-html="table">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!--[ Recent Users ] end-->
                <!-- [ rating list ] starts-->
                <div class="col-xl-4 col-md-6">
                    <div class="card user-list">
                        <div class="card-header">
                            <h5>Rating</h5>
                        </div>
                        <div class="card-block">
                            <div class="row align-items-center justify-content-center m-b-20">
                                <div class="col-6">
                                    <h2 class="f-w-300 d-flex align-items-center float-left m-0">{{rating.avg}} <i class="fas fa-star f-10 m-l-10 text-c-yellow"></i></h2>
                                </div>
                                <div class="col-6">
                                    <h6 class="d-flex  align-items-center float-right m-0">{{rating.diff}} <i class="fas fa-caret-up text-c-green f-22 m-l-10"></i></h6>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xl-12">
                                    <h6 class="align-items-center float-left"><i class="fas fa-star f-10 m-r-10 text-c-yellow"></i>5</h6>
                                    <h6 class="align-items-center float-right">{{rating.r5}}</h6>
                                    <div class="progress m-t-30 m-b-20" style="height: 6px;">
                                        <div class="progress-bar progress-c-theme" role="progressbar" style=width:{{rating.b5}}% aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <h6 class="align-items-center float-left"><i class="fas fa-star f-10 m-r-10 text-c-yellow"></i>4</h6>
                                    <h6 class="align-items-center float-right">{{rating.r4}}</h6>
                                    <div class="progress m-t-30  m-b-20" style="height: 6px;">
                                        <div class="progress-bar progress-c-theme" role="progressbar" style=width:{{rating.b4}}% aria-valuenow="35" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <h6 class="align-items-center float-left"><i class="fas fa-star f-10 m-r-10 text-c-yellow"></i>3</h6>
                                    <h6 class="align-items-center float-right">{{rating.r3}}</h6>
                                    <div class="progress m-t-30  m-b-20" style="height: 6px;">
                                        <div class="progress-bar progress-c-theme" role="progressbar" style=width:{{rating.b3}}% aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <h6 class="align-items-center float-left"><i class="fas fa-star f-10 m-r-10 text-c-yellow"></i>2</h6>
                                    <h6 class="align-items-center float-right">{{rating.r2}}</h6>
                                    <div class="progress m-t-30  m-b-20" style="height: 6px;">
                                        <div class="progress-bar progress-c-theme" role="progressbar" style=width:{{rating.b2}}% aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                                <div class="col-xl-12">
                                    <h6 class="align-items-center float-left"><i class="fas fa-star f-10 m-r-10 text-c-yellow"></i>1</h6>
                                    <h6 class="align-items-center float-right">{{rating.r1}}</h6>
                                    <div class="progress m-t-30  m-b-20" style="height: 6px;">
                                        <div class="progress-bar progress-c-theme" role="progressbar" style=width:{{rating.b1}}% aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- [ rating list ] end-->
            </div>
            <!-- [ Main Content ] end -->
        </div>
    </div>
</div>